<header class="jumbotron mt-5">
  <h1 class="display-4 text-center">Eater Tracker</h1>
  <div class="mt-4 text-center">
    <button class="btn btn-primary" id="scrapeNew" data-toggle="modal" data-target="#alertModal">Scrape New Articles</button>
    <a href="/articles/viewSaved"><button class="btn btn-primary" id="viewSaved">View Saved Articles</button></a>
    <button class="btn btn-primary" id="scrapeArchive" data-toggle="modal" data-target="#alertModal">Scrape Archived Articles</button>
    <button class="btn btn-danger" id="destroyData" data-toggle="modal" data-target="#alertModal">DESTORY ALL DATA</button>
  </div>
</header>

<main>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Scraped Articles</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each articles}}
  {{#unless wantToGo}}
  {{#unless hidden}}
  {{#if link}}
  <tr>
      <th scope="row"><a href="{{link}}" class="" target="_blank">
      {{title}}
    </a></th>
      <td>
        <button class="btn btn-primary saveArticle" data-id="{{_id}}">Save Article</button>
        <button class="btn btn-primary hideArticle" data-id="{{_id}}">Hide Article</button>
      </td>
  </tr>
  {{/if}}
  {{/unless}}
  {{/unless}}
  {{/each}}
  </tbody>
</table>
</main>

  {{!-- content modal --}}
  <div id="alertModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body text-center">
          <h2 id="modalMsg"></h2>
        </div>
      </div>
    </div>
  </div>

  {{!-- error modal --}}
  <div id="error" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <h2>There was an error processing your request. Please try again later.</h2>
        </div>
      </div>
    </div>
  </div>